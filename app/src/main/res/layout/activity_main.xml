<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/avd_tongue"
        android:theme="@style/AlternativeTheme"
        android:id="@+id/root"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"

    >



    <ImageButton
            android:id="@+id/play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/play_to_pause"
            android:contentDescription="@string/play_button_description"/>
        <FrameLayout
                android:id="@+id/fragment_container"
                android:name="me.mehdi.playavd.AvdFragment"
                  android:layout_height="200dp"
                  android:layout_width="200dp"
        />
    <ImageView android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/man"
               android:src="@drawable/avd_man"
               android:focusable="true"
               android:clickable="true"
    />
    <ImageView
            android:id="@+id/myAvd"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/my_avd"
    />
    <ImageView android:layout_width="200dp"
               android:layout_height="200dp"
               android:id="@+id/writing"
               android:src="@drawable/avd_writing"
               android:visibility="gone"
               android:focusable="true"
               android:clickable="true"
    />
    <ImageView
            android:id="@+id/tongue"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/avd_tongue"
    />

    <TextView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/note"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="This is a TextView"
            android:textColor="?attr/colorPrimary"
            android:theme="@style/AlternativeTheme"
    />

        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:src="@drawable/avd_heart"
                     android:id="@+id/heart"
        />

</LinearLayout>

</ScrollView>