<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/avd_tongue"
        android:theme="@style/AlternativeTheme"
>

    <ImageButton
            android:id="@+id/play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/play_to_pause"
            android:contentDescription="@string/play_button_description"/>
    <ImageView android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/man"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:src="@drawable/avd_man"
               android:focusable="true"
               android:clickable="true"
    />
    <ImageView
            android:id="@+id/myAvd"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/my_avd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView android:layout_width="200dp"
               android:layout_height="200dp"
               android:id="@+id/writing"
               android:src="@drawable/avd_writing"
               android:visibility="gone"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:focusable="true"
               android:clickable="true"
    />
    <ImageView
            android:id="@+id/tongue"
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/avd_tongue"
    />

    <TextView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/note"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="This is a TextView"
            android:textColor="?attr/colorPrimary"
            android:theme="@style/AlternativeTheme"
    />



</androidx.constraintlayout.widget.ConstraintLayout>