<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator android:propertyName="fillColor"
                    android:repeatCount="infinite"
                    android:duration="@android:integer/config_longAnimTime"
                    android:valueType="colorType"
                    android:valueFrom="#FF5722"
                    android:valueTo="#2E7D32"

                    />
    <objectAnimator android:propertyName="strokeColor"
                    android:repeatCount="infinite"
                    android:duration="@android:integer/config_longAnimTime"
                    android:valueType="colorType"
                    android:valueFrom="@color/colorPrimary"
                    android:valueTo="@color/colorAccent"
                    />
</set>